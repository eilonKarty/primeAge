

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="2"
    android:background="#F0EBDC"

    >

    <LinearLayout
        android:id="@+id/ezraWelcoming"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.3"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"

        >


        <Button
            android:layout_width="80dp"
            android:layout_height="154dp"
            android:gravity="left"
            android:background="@drawable/box"
            android:layout_weight="9"

            />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="160dp"
            android:background="@drawable/george_tut_1"
            android:layout_gravity="right"
            android:layout_weight="1"

            />


    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.7"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brightness:"
            android:textSize="11pt"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:layout_gravity="top"
            android:layout_marginLeft="40dp"
            android:textColor="#513510"
            />


        <FrameLayout
            android:layout_width="320dip"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="top|center"
            >
            <SeekBar
                android:id="@+id/brightness_bar"
                android:layout_width="285dip"
                android:layout_height="65dip"
                android:layout_marginLeft="20dip"
                android:background="@drawable/slider_back"
                android:thumb="@drawable/slide_bar_custom"
                android:thumbOffset="19dip"
                android:layout_marginTop="10dp">
            </SeekBar>

            <!--
            <ImageButton
                android:layout_height="33dp"
                android:layout_width="65dp"
                android:background="@drawable/slider_button"
                android:layout_marginTop="10dp"
                android:layout_gravity="top|center"
                />
                -->



        </FrameLayout>




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sensitivity:"
            android:textSize="11pt"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:layout_gravity="center|left"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="23dp"
            android:textColor="#472E14"
            />

        <ImageButton
            android:id="@+id/pressureButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/pressure_button"
            >
        </ImageButton>


        <ImageButton
            android:id="@+id/pushToContinueButton"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@drawable/ahead_button_custom"
            android:layout_gravity="center"
            android:layout_marginTop="44dp"
            />

    </LinearLayout>

</LinearLayout>
