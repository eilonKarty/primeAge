

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical"
android:weightSum="2"
android:background="@drawable/background"
    >

    <LinearLayout
        android:id="@+id/ezra_welcoming"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.2"
        android:orientation="vertical">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="190dp"
            android:background="@drawable/george_tut_1"
            android:layout_gravity="right"
            android:layout_marginRight="8dp"
            />


    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.8"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contrast:"
            android:textSize="13pt"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:layout_gravity="top"
            android:layout_marginLeft="40dp"
            android:textColor="#513510"
            />


        <FrameLayout
            android:layout_width="290dip"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="top"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/slider_back"
                >
            </ImageView>
            <ImageButton
                android:layout_height="33dp"
                android:layout_width="65dp"
                android:background="@drawable/slider_button"
                android:layout_marginTop="10dp"
                android:layout_gravity="top|center"

                />



        </FrameLayout>




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sensitivity:"
            android:textSize="13pt"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:layout_gravity="center|left"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="12dp"
            android:textColor="#513510"
            />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            android:background="@drawable/pressure_button"
            >
        </ImageButton>


        <ImageButton
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@drawable/ahead_button"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"

            />


    </LinearLayout>

</LinearLayout>


