

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical"
android:weightSum="2"
android:background="@drawable/background"

    >

    <LinearLayout
        android:id="@+id/ezraWelcoming"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.2"
        android:orientation="vertical">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="190dp"
            android:background="@drawable/george_tut_1"
            android:layout_gravity="right"
            android:layout_marginRight="8dp"
            />


    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.8"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textSize="12pt"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:layout_gravity="top"
            android:layout_marginLeft="40dp"
            android:textColor="#513510"

             />

            <EditText
                android:layout_width="290dip"
                android:layout_height="60dp"
                android:background="@drawable/text_box"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="top"
                android:singleLine="true"
                android:padding="12dp"
                android:hint="Type your name here"
                android:textColorHint="#513510"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text size:"
            android:textSize="12pt"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:layout_gravity="center|left"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="12dp"
            android:textColor="#513510"
            />

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_gravity="center"
            >

            <Button
                android:id="@+id/TextSizeButton"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/main_button"
                android:text="A"
                android:textSize="32dp"
                android:textColor="#513510"
                />

            <Button
                android:id="@id/TextSizeButton"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/main_button"
                android:text="A"
                android:textSize="44dp"
                android:textColor="#513510"
                />

            <Button
                android:id="@id/TextSizeButton"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/main_button"
                android:text="A"
                android:textSize="60dp"
                android:textColor="#513510"

                />
        </LinearLayout>


        <ImageButton
            android:id="@+id/pushToContinueButton"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@drawable/ahead_button"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"

            />


    </LinearLayout>

</LinearLayout>


