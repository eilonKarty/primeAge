

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    android:background="#F0EBDC"

    >

    <LinearLayout
        android:id="@+id/ezraWelcoming"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.3"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        >
        <Button
            android:layout_width="80dp"
            android:layout_height="154dp"
            android:gravity="left"
            android:background="@drawable/box"
            android:layout_weight="9"
            />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="160dp"
            android:background="@drawable/george_tut_1"
            android:layout_gravity="right"
            android:layout_weight="1"
            />


    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.70"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/nameLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textSize="11pt"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:layout_gravity="top"
            android:layout_marginLeft="40dp"
            android:textColor="#472E14"

            />

        <EditText
            android:id="@+id/nameFieldButton"
            android:layout_width="290dip"
            android:layout_height="60dp"
            android:background="@drawable/text_box"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="top"
            android:singleLine="true"
            android:padding="12dp"
            android:hint="Type your name here"
            android:textColorHint="#513510"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text size:"
            android:textSize="11pt"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:layout_gravity="center|left"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="23dp"
            android:textColor="#513510"
            />

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            >

            <ToggleButton
                android:id="@+id/smallTextSizeButton"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/main_button_custom"
                android:textOff="A"
                android:textOn="A"
                android:textSize="26dp"
                android:textStyle="bold"
                android:textColor="#513510"
                />

            <ToggleButton
                android:id="@+id/mediumTextSizeButton"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/main_button_custom"
                android:textOff="A"
                android:textOn="A"
                android:textSize="40dp"
                android:textStyle="bold"
                android:textColor="#513510"
                />

            <ToggleButton
                android:id="@+id/bigTextSizeButton"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/main_button_custom"
                android:textOn="A"
                android:textOff="A"
                android:textSize="54dp"
                android:textStyle="bold"
                android:textColor="#513510"
                />

        </LinearLayout>


        <ImageButton
            android:id="@+id/pushToContinueButton"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@drawable/ahead_button_custom"
            android:layout_gravity="center"
            android:layout_marginTop="44dp"

            />


    </LinearLayout>

</LinearLayout>

